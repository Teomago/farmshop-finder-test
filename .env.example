# Database Configuration
DATABASE_URI=mongodb://127.0.0.1/farmshop-dev
# For production, use MongoDB Atlas:
# DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/farmshop

# Payload CMS Configuration
PAYLOAD_SECRET=your-very-long-secret-key-minimum-32-characters-required

# Site URLs (required for SEO and email links)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
SITE_URL=http://localhost:3000
# For production:
# NEXT_PUBLIC_SITE_URL=https://your-domain.com
# SITE_URL=https://your-domain.com

# Mapbox Integration (optional - for map functionality)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-public-token-here

# S3 Storage Configuration (optional - for media uploads)
S3_BUCKET=your-s3-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
# For DigitalOcean Spaces:
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Email Configuration (optional - for transactional emails)
BREVO_API_KEY=your-brevo-api-key
BREVO_EMAILS_ACTIVE=true
BREVO_SENDER_NAME=Farmshop Finder
BREVO_SENDER_EMAIL=noreply@your-domain.com

# Development/Testing Settings
# Set to false in development to disable email sending
# BREVO_EMAILS_ACTIVE=false
